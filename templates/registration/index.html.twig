{# templates/default/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}L'annuaire d'entreprise{% endblock %}

{% block body %}
    <h1>L'annuaire d'entreprise</h1>
    {# Vous pouvez ajouter ici le formulaire de connexion si nécessaire #}
    {# Et afficher la liste des utilisateurs uniquement si l'utilisateur est connecté #}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <h2>Liste des utilisateurs :</h2>
        <ul>
            {% for user in users %}
                <li>
                    {{ user.firstname }} {{ user.lastname }} - Secteur: {{ user.secteur }} - Contrat: {{ user.typeContrat }}
                    {% if user.dateSortie %}
                        - Date de sortie: {{ user.dateSortie|date('d/m/Y') }}
                    {% endif %}
                    {% if user.photo %}
                        - <img src="{{ asset(user.photo) }}" alt="Photo de {{ user.firstname }} {{ user.lastname }}" width="100" height="100">
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}

